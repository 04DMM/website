<%- include('../_partial/header.ejs', { title: 'Event Log' }); %>
<%- include('../_components/frame-top.ejs'); %>
<%- include('../_components/content-start.ejs'); %>
<%- include('../_components/title-box.ejs', { title: account.username + "'s Event Log", links: [ { text: 'Overview', href: '/mod/overview/' + account.username } ] }); %>

<%- include('../_components/content-body-start.ejs'); %>
<div style="height: 500px; overflow-y: scroll">
    <% for (const log of logs) { %>
        <div style="text-align: left">
            <% const coord = toAbsolute(log.coord); %>
            <a target="_blank" href="https://mejrs.github.io/historical?era=rs2_2004_06_01&p=<%= coord.level %>&x=<%= coord.x %>&y=<%= coord.z %>"><%= toDisplayCoord(log.coord) %></a>,
            World: <strong><%= log.world - 9 %></strong>

            <span style="float: right">
                <%= log.timestamp.toISOString().replace("T"," ").substring(0, 19); %>
            </span>

            <br>

            <%= log.event %>
        </div>
        <hr>
    <% } %>
</div>
<%- include('../_components/content-body-end.ejs'); %>

<%- include('../_components/content-end.ejs'); %>
<%- include('../_partial/footer.ejs'); %>
